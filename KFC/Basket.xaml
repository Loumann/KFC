<Page x:Class="KFC.Basket"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KFC"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Basket">

    <Grid x:Name="BackToContentMenu">
        <Grid.RowDefinitions>
            <RowDefinition Height="53*"/>
            <RowDefinition Height="97*"/>
        </Grid.RowDefinitions>
        <ScrollViewer Margin="393,-10,10,10" Grid.RowSpan="2"/>
        <Button Content="Вернуться к выбору" HorizontalAlignment="Left" Margin="59,54,0,0" VerticalAlignment="Top" Height="42" Width="163" Click="Button_Click"/>
        <Button x:Name="Pay" Content="Оплатить" HorizontalAlignment="Left" Margin="59,120,0,0" VerticalAlignment="Top" Height="42" Width="163" Click="Button_Click" Grid.Row="1" RenderTransformOrigin="0.883,0.452"/>
        <TextBlock HorizontalAlignment="Left" Margin="59,66,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Сумма:" VerticalAlignment="Top" Height="21" Width="52"/>

    </Grid>
</Page>
